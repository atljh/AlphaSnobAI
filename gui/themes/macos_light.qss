/*
 * macOS Light Theme for AlphaSnobAI
 * Modern, minimalist design inspired by macOS Big Sur / Ventura
 */

/* === Global === */
* {
    font-family: -apple-system, "SF Pro Text", "Segoe UI", sans-serif;
    font-size: 13px;
}

QMainWindow {
    background-color: #f5f5f7;
}

/* === Sidebar (Navigation) === */
QListWidget {
    background-color: rgba(245, 245, 247, 0.95);
    border: none;
    border-right: 1px solid #d1d1d6;
    outline: none;
    padding: 8px;
}

QListWidget::item {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 12px 16px;
    margin: 2px 0px;
    color: #1d1d1f;
}

QListWidget::item:selected {
    background-color: #007aff;
    color: white;
}

QListWidget::item:hover:!selected {
    background-color: rgba(0, 122, 255, 0.1);
}

/* === Status Bar === */
QStatusBar {
    background-color: rgba(255, 255, 255, 0.9);
    border-top: 1px solid #d1d1d6;
    color: #86868b;
    font-size: 11px;
}

QStatusBar QLabel {
    color: #86868b;
}

/* === Menu Bar === */
QMenuBar {
    background-color: rgba(255, 255, 255, 0.95);
    border-bottom: 1px solid #d1d1d6;
    color: #1d1d1f;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 12px;
    border-radius: 6px;
}

QMenuBar::item:selected {
    background-color: rgba(0, 122, 255, 0.1);
}

QMenu {
    background-color: rgba(255, 255, 255, 0.95);
    border: 1px solid #d1d1d6;
    border-radius: 8px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 24px;
    border-radius: 6px;
}

QMenu::item:selected {
    background-color: #007aff;
    color: white;
}

/* === Buttons === */
QPushButton {
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 10px;
    padding: 10px 24px;
    font-weight: 600;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #0051d5;
}

QPushButton:pressed {
    background-color: #004ab8;
}

QPushButton:disabled {
    background-color: #d1d1d6;
    color: #86868b;
}

/* === Text Inputs === */
QLineEdit {
    background-color: rgba(255, 255, 255, 0.8);
    border: 1px solid #d1d1d6;
    border-radius: 8px;
    padding: 8px 12px;
    color: #1d1d1f;
}

QLineEdit:focus {
    border: 2px solid #007aff;
}

/* === Text Edit / Log Viewer === */
QTextEdit {
    background-color: rgba(255, 255, 255, 0.95);
    border: 1px solid #d1d1d6;
    border-radius: 10px;
    color: #1d1d1f;
    padding: 8px;
    selection-background-color: #007aff;
    selection-color: white;
}

/* === Combo Box === */
QComboBox {
    background-color: rgba(255, 255, 255, 0.9);
    border: 1px solid #d1d1d6;
    border-radius: 8px;
    padding: 6px 12px;
    color: #1d1d1f;
    min-width: 120px;
}

QComboBox:hover {
    border: 1px solid #007aff;
}

QComboBox::drop-down {
    border: none;
    padding-right: 8px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 6px solid #86868b;
    margin-right: 4px;
}

QComboBox QAbstractItemView {
    background-color: white;
    border: 1px solid #d1d1d6;
    border-radius: 8px;
    selection-background-color: #007aff;
    selection-color: white;
    outline: none;
}

/* === Checkbox === */
QCheckBox {
    color: #1d1d1f;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 1px solid #d1d1d6;
    background-color: white;
}

