# AlphaSnobAI v3.0 - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Bot Debug Mode
ALPHASNOB_DEBUG=false

# Telegram API Credentials (from https://my.telegram.org/apps)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_SESSION_NAME=alphasnob_bot

# LLM API Keys
ANTHROPIC_API_KEY=sk-ant-your-key-here
OPENAI_API_KEY=sk-your-key-here

# Bot Configuration
BOT_OWNER_ID=your_telegram_user_id
BOT_OWNER_USERNAME=your_username
BOT_RESPONSE_PROBABILITY=0.3
BOT_MIN_TRUST_FOR_RESPONSE=0.0
BOT_MAX_COOLDOWN_MINUTES=60

# Database
DATABASE_PATH=data/context.db

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Docker-specific (used in docker-compose.yml)
COMPOSE_PROJECT_NAME=alphasnob
